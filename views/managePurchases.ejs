<!DOCTYPE html>

<html>
    <head>
        
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width initial-scale=1">
        <title>Purchase History</title>
        
        
        <link href="/resources/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="/resources/css/style.css" rel="stylesheet" type="text/css">
        <script src="/resources/js/jquery-3.1.1.min.js" type="text/javascript"> </script>
        <script src="/resources/bootstrap/js/bootstrap.min.js" type="text/javascript"> </script>
        <script src="/resources/js/script.js" type="text/javascript"></script>
    
    </head>
    <body>
        <!-- Header -->
        <%- include('partition/header.ejs') %>

            <!-- Content -->
            <div class="content container">
                <div class="row">
                    <!-- NAV LEFT -->
                    <%- include('partition/navLeft.ejs') %>

                        <div class="col-md-9 contentRight">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4>Unpaid items</h4>
                                </div>
                                <div class="panel-body">
                                    <p>You have <%- unpaidItems.length %> item waiting for pay.</p>
                                    <p> Please click following link bellow to pay this items before end of time!</p>
                                    <div class="row">
                                        <!-- For each here -->
                                        <% unpaidItems.forEach((item) => { %>
                                            <div class="col-sm-6 col-md-4 col-lg-4">
                                                <div class="table-bordered productPreview">
                                                    <img src="<%- item.image %>" alt="http://i.ebayimg.com/images/g/EowAAOSwSclXMEe4/s-l1600.jpg" class="img-display table-bordered img-responsive">
                                                    <div class="caption">
                                                        <a href="/buyItem?id=<%-item._id%>">
                                                            <h4 class="textPreview">
                                                                <%- item.name %>
                                                            </h4>
                                                        </a>
                                                        <div class="bidTimePreview">
                                                            <h4> Price:
                                                                <%- item.price %>$ </h4>
                                                            <div id="StartTime"> Start Time:
                                                                <%- moment(item.start_time).format('HH:mm:ss DD-MM-YYYY') %>
                                                            </div>
                                                            <div id="EndTime"> End Time:
                                                                <%- moment(item.end_time).format('HH:mm:ss DD-MM-YYYY') %>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <a href="/buyItem?id=<%-item._id%>" class="btn btn-primary btnEdit">Buy</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <!-- ./row -->
                                </div>
                            </div>
                            <!-- ./panel -->


                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4>Ordering</h4>
                                </div>
                                <div class="panel-body">
                                    <p>You have <%- orderingItems.length %> item ordered. Your item is being shipped to your address</p>
                                    <p> If you have received your items, please let us know by click button: "I got my item" bellow!</p>
                                    <div class="row">
                                        <!-- For each here -->
                                        <% orderingItems.forEach((item) => { %>
                                            <div class="col-sm-6 col-md-4 col-lg-4">
                                                <div class="table-bordered productPreview">
                                                    <img src="<%- item.image %>" alt="http://i.ebayimg.com/images/g/EowAAOSwSclXMEe4/s-l1600.jpg" class="img-display table-bordered img-responsive">
                                                    <div class="caption">
                                                        <a href="/detail?id=<%-item._id%>">
                                                            <h4 class="textPreview">
                                                                <%- item.name %>
                                                            </h4>
                                                        </a>
                                                        <div class="bidTimePreview">
                                                            <h4> Price:
                                                                <%- item.price %>$ </h4>
                                                            <div id="StartTime"> Start Time:
                                                                <%- moment(item.start_time).format('HH:mm:ss DD-MM-YYYY') %>
                                                            </div>
                                                            <div id="EndTime"> End Time:
                                                                <%- moment(item.end_time).format('HH:mm:ss DD-MM-YYYY') %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <!-- ./row -->
                                </div>
                            </div>
                            <!-- ./panel -->

                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4>Received items</h4>
                                </div>
                                <div class="panel-body">
                                    <p>You have <%- receivedItems.length %> items received after ordering from our website.</p>
                                    <div class="row">
                                        <!-- For each here -->
                                        <% receivedItems.forEach((item) => { %>
                                            <div class="col-sm-6 col-md-4 col-lg-4">
                                                <div class="table-bordered productPreview">
                                                    <img src="<%- item.image %>" alt="http://i.ebayimg.com/images/g/EowAAOSwSclXMEe4/s-l1600.jpg" class="img-display table-bordered img-responsive">
                                                    <div class="caption">
                                                        <a href="/detail?id=<%-item._id%>">
                                                            <h4 class="textPreview">
                                                                <%- item.name %>
                                                            </h4>
                                                        </a>
                                                        <div class="bidTimePreview">
                                                            <h4> Price:
                                                                <%- item.price %>$ </h4>
                                                            <div id="StartTime"> Start Time:
                                                                <%- moment(item.start_time).format('HH:mm:ss DD-MM-YYYY') %>
                                                            </div>
                                                            <div id="EndTime"> End Time:
                                                                <%- moment(item.end_time).format('HH:mm:ss DD-MM-YYYY') %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <!-- ./row -->
                                </div>
                            </div>
                            <!-- ./panel -->


                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4>Returns and canceled orders</h4>
                                </div>
                                <div class="panel-body">
                                    <p>You do not have any returned and canceled orders to display in this view.</p>
                                </div>
                            </div>
                            <!-- ./panel -->

                        </div>


                </div>
            </div>
    </body>
    
</html>
